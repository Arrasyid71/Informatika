# Mendeklarasikan variabel
nama = "Aisyah"
umur = 25
tinggi = 1.65  # dalam meter
is_student = True

# Menggunakan variabel
print("Nama:", nama)
print("Umur:", umur)
print("Tinggi:", tinggi, "meter")
print("Apakah dia seorang pelajar?", is_student)

# Mengubah nilai variabel
umur = 26
is_student = False

print("\nSetelah setahun:")
print("Umur:", umur)
print("Apakah dia seorang pelajar?", is_student)
